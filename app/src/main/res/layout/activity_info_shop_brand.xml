<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.brand.InfoShopBrandActivity">

    <ImageView
        android:id="@+id/image_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="#fff000"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_22"
        app:layout_constraintBottom_toBottomOf="@+id/image_info"
        app:layout_constraintLeft_toLeftOf="@+id/image_info"
        app:layout_constraintRight_toRightOf="@+id/image_info"
        app:layout_constraintTop_toTopOf="@+id/image_info" />

    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/image_info" />

<!--    <view-->
<!--        android:id="@+id/view_info"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/dp_5"-->
<!--        android:background="#888787"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/info_text" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/info_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_info" />

</androidx.constraintlayout.widget.ConstraintLayout>