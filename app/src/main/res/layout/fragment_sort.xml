<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.SearchView
        android:id="@+id/sort_search"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <q.rorbin.verticaltablayout.VerticalTabLayout
        android:id="@+id/sort_tab"
        android:layout_marginTop="@dimen/dp_10"
        app:tabSelectedTextColor="#ff0000"
        app:layout_constraintTop_toBottomOf="@+id/sort_search"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingVertical="@dimen/dp_10"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/sort_image"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/sort_tab"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_100"/>
    <TextView
        android:id="@+id/image_txt"
        app:layout_constraintLeft_toLeftOf="@+id/sort_image"
        app:layout_constraintTop_toTopOf="@+id/sort_image"
        app:layout_constraintRight_toRightOf="@+id/sort_image"
        app:layout_constraintBottom_toBottomOf="@+id/sort_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/sort_txt"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/sort_tab"
        app:layout_constraintTop_toBottomOf="@+id/sort_image"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sort_recycle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_txt"
        app:layout_constraintLeft_toRightOf="@+id/sort_tab"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>