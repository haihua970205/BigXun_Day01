<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.newgoods.NewGoodListActivity"
    android:id="@+id/rl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/new_good_list_background"
        android:layout_height="@dimen/dp_110">
        <ImageView
            android:id="@+id/img_new_good_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_good_list_name"
            android:layout_centerInParent="true"
            android:text="大家都在买的严选好物"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/colorYes"/>
        <View
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_1"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/new_good_list_name"
            android:background="@color/colorYes"
            android:layout_marginTop="@dimen/dp_10"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/new_good_list_tab_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_below="@id/new_good_list_background">
        <TextView
            android:id="@+id/new_good_list_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/good_list_name_all"
            android:textSize="@dimen/dp_18"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/new_good_list_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="@string/good_list_name_price"
            android:textSize="@dimen/dp_18"
            android:gravity="center_horizontal">


        </TextView>

        <ImageView
            android:id="@+id/new_good_list_up_down_selected"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"

            android:background="@mipmap/newgood_upanddown" />
        <TextView
            android:id="@+id/new_good_list_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/good_list_name_sort"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <View
        android:id="@+id/new_good_list_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/new_good_list_tab_select"
        android:background="#E2ECE8"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/new_good_list_line"
        android:id="@+id/new_good_list_rcy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>